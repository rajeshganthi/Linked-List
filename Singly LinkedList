public class Main
{
	public static void main(String[] args){
	    SinglyLL list = new SinglyLL();
	    list.insertData(10);
	    list.insertData(20);
	    list.insertData(30);
	    list.display();
	    System.out.println();
	    list.inserAtEnd(40);
	    list.display();
	    System.out.println();
	    list.insertAtMiddle(15,10);
	    list.display();
	    list.inserAtEnd(60);
	    System.out.println();
	    list.display();
	    System.out.println();
	    list.deleteNode(30);
	    list.display();
	}
}

class Node{
    int data;
    Node next;
    
    Node(int data){
        this.data = data;
        next = null;
    }
}

class SinglyLL{
    Node head,tail;
    public void insertData(int data){
        Node node = new Node(data);
        if(head==null){
            head = tail = node;
            return;
        }
        tail.next = node;
        tail = node;
        
    }
    
    public void display(){
        Node temp = head;
        while(temp!=null){
            System.out.print(temp.data+"-->");
            temp = temp.next;
        }
        System.out.print("null");
        
    }
    
    public void inserAtEnd(int data){
        Node node = new Node(data);
        if(tail != null){
            tail.next = node;
            tail = node;
        }
    }
    
    public void insertAtMiddle(int data, int index){
        Node node = new Node(data);
        Node temp = head;
        Node address;
        while(temp!=null && temp.data == index){
            address = temp.next;
            temp.next  = node;
            temp = node;
            temp.next = address;
            temp = address;
        }
    }
    
    public void deleteNode(int data){
        Node temp = head;
        Node prevNode = head;
        while(temp!=null){
            if(temp.data == data){
                prevNode.next = temp.next;
            }
            prevNode = temp;
            temp = temp.next;
        }
    }
}
